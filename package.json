{
  "name": "super-one",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @super-one/web dev",
    "dev:web": "bun run --filter @super-one/web dev",
    "dev:admin": "bun run --filter @super-one/admin dev",
    "dev:tools": "bun run --filter @super-one/tools dev",
    "dev:learn": "bun run --filter @super-one/learn dev",
    "build": "bun run --filter '*' build",
    "build:web": "bun run --filter @super-one/web build",
    "build:admin": "bun run --filter @super-one/admin build",
    "build:tools": "bun run --filter @super-one/tools build",
    "build:learn": "bun run --filter @super-one/learn build",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "prepare": "husky",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next apps/*/.svelte-kit apps/*/.turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.42.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,svelte}": [
      "oxlint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,md}": [
      "bunx @biomejs/biome format --write"
    ]
  },
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
